                        android:text="برنج"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk7"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="عدس"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk8"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="زعفران"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk9"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="رشته"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk10"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="سبزی"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk11"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="سوسیس"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk12"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="کالباس"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk13"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="لیمو"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk14"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="ماهی"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk15"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="تمر"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk16"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="آلو"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk17"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="ذرت"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk18"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="آلوچه"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk19"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="میگو"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk20"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="اسفناج"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk21"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="بامیه"
                        android:textColor="#000000" />

                </LinearLayout>

                <ImageView
                    android:layout_height="fill_parent"
                    android:background="#ffffff" android:layout_width="3dip"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical" android:layout_weight="0.5">

                    <CheckBox
                        android:id="@+id/chk23"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="گردو"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk24"
