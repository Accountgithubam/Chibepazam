                        android:layout_height="45dip"
                        android:text="مرغ"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk25"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="رب انار"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk26"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="لپه"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk27"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="شوید"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk28"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="باقلا"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk29"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="بوقلمون"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk30"
                        android:layout_width="fill_parent"
