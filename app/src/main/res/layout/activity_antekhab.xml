                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk35"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="قارچ"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk36"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="نارنج"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk37"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="تخم مرغ"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk38"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="خیارشور"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk39"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="آلو سیاه"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk40"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="آلبالو"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk41"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="کرفس"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk42"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="آلوسیاه"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/chk22"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:text="زرشک"
                        android:textColor="#000000" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnr"
            android:layout_width="0dip"
            android:layout_height="75dip"
            android:layout_weight="0.5"
            android:text="پاک کردن انتخاب ها " />



        <Button
            android:id="@+id/btnok"
            android:layout_width="0dip"
            android:layout_height="75dip"
            android:layout_weight="0.5"
            android:text="پیدا کردن غذا" />

    </LinearLayout>

</LinearLayout>